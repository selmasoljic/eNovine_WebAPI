
@using MyApp.Web.Helper
@model MyApp.Web.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    string error_poruka = (string)TempData["error_poruka"];
    Layout = "_LayoutAnonim";
}

<div class="col-md-4 col-md-offset-4">
    <h2>@MyStringValues.AppName</h2>

    <form asp-action="Login">

        <div class="form-group">
            <label>Username: </label>
            <div>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label>Password: </label>
            <div>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>


        <input type="submit" class="form-control btn btn-primary" value="Login" />
        <input asp-for="SavePassword" />  @MyStringValues.SavePassword
    </form>

    @if (error_poruka != null)
    {
        <br/>
        <div class="alert alert-danger">
            @error_poruka
        </div>
    }
</div>  
